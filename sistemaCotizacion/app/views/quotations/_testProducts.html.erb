<% if @quotation.products.length >= 3 %>
<div class="col-md-4">
  <div class="card border-primary mb-3" style="max-width: 20rem;">
    <div class="card-header text-primary border-primary">Opci&oacute;n 1</div>
    <div class="card-body text-primary">
    <div class="row">
      <% @quotation.products[0..3].each do |product| %>
      <div class="col-md-6">
        <%= link_to image_tag(product.image, class: 'rounded img-fluid', alt: 'proyecto base') %>
      </div>
      <div class="col-md-6">
        <p class="font-weight-bold"><%= product.name %></p>
      </div>
      <% end %>
    </div>
    <br>
    <div class="row">
      <%= link_to 'Seleccionar Sugerencia', quotations_path(@quotation), method: :updateProducts, class: "btn btn-primary btn-block container-fluid"%>
    </div>
  </div>
  </div>
</div>
<% end %>


